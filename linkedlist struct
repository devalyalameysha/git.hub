#include <iostream>
using namespace std;

// Struktur node untuk linked list
struct Node {
    int data;
    Node* next;
};

// Fungsi untuk menambahkan node di belakang
void tambahBelakang(Node*& head, int nilai) {
    Node* baru = new Node;
    baru->data = nilai;
    baru->next = NULL;

    if (head == NULL) {
        head = baru;
    } else {
        Node* bantu = head;
        while (bantu->next != NULL) {
            bantu = bantu->next;
        }
        bantu->next = baru;
    }
}

// Fungsi untuk menampilkan semua elemen
void tampilkan(Node* head) {
    cout << "Isi Linked List: ";
    Node* bantu = head;
    while (bantu != NULL) {
        cout << bantu->data << " -> ";
        bantu = bantu->next;
    }
    cout << "NULL" << endl;
}

// Fungsi untuk menghitung jumlah elemen
int hitungJumlahElemen(Node* head) {
    int jumlah = 0;
    Node* bantu = head;
    while (bantu != NULL) {
        jumlah++;
        bantu = bantu->next;
    }
    return jumlah;
}

int main() {
    Node* head = NULL;  // Inisialisasi linked list kosong

    // Menambahkan beberapa elemen
    tambahBelakang(head, 10);
    tambahBelakang(head, 20);
    tambahBelakang(head, 30);

    // Tampilkan linked list
    tampilkan(head);

    // Hitung dan tampilkan jumlah elemen
    int jumlah = hitungJumlahElemen(head);
    cout << "Jumlah elemen dalam linked list: " << jumlah << endl;

    return 0;
}